{erl_first_files, ["src/gen_nb_server.erl", "src/riak_core_gen_server.erl",
		   "src/riak_core_stat_xform"]}.
%{cover_enabled, true}.
{erl_opts, [warnings_as_errors,
            {parse_transform, lager_transform},
            debug_info]}.
{edoc_opts, [{preprocess, true}]}.
{eunit_opts, [verbose]}.
{xref_checks, []}.
{xref_queries, [{"(XC - UC) || (XU - X - B - \"(cluster_info|dtrace)\" : Mod)", []}]}.

{deps, [
  %% Stuff we need to work with rebar3
  {goldrush, "~>0.1.8"},
  {cuttlefish, "~>2.0.12"},
  %{clique, "~>0.3.9"},
  {clique, {git, "https://github.com/Kyorai/clique.git", {branch, "r21"}}},
  %% Normal deps
  {lager, "~>3.2.4"},
  %{poolboy, "0.8.2", {pkg, basho_poolboy}},
  {poolboy, {git, "https://github.com/Kyorai/poolboy.git", {branch, "r21"}}},
  {basho_stats, "~>1.0.3"},
  %{riak_sysmon, "~>2.1.3"},
  {riak_sysmon, {git, "https://github.com/Kyorai/riak_sysmon.git", {branch, "vsn_plugin_update"}}},
  %{riak_ensemble, "~>2.4.1", {pkg, riak_ensemble_ng}},
  {riak_ensemble, {git, "https://github.com/Kyorai/riak_ensemble.git", {branch, "r21"}}},
  {pbkdf2, "~>2.0.0"},
  {blume, "~>0.1.0"},
  {chash, "~>0.1.1"},
  gen_fsm_compat,
  {exometer_core, "~>1.0.0", {pkg, basho_exometer_core}}
]}.

{plugins, [{rebar_erl_vsn, "~> 0.1"}]}.
{provider_hooks, [{pre, [{compile, {default, erl_vsn}}]}]}.

%%-------------------------------------------------------------------
%% Profiles
%%-------------------------------------------------------------------

{profiles,
 [{test, [{erl_opts, [nowarn_export_all]},
          {deps,
           [{mustache, ".*", {git, "https://github.com/mojombo/mustache.erl.git", {tag, "v0.1.1"}}}]}]},
  {docs, [{deps, [{edown, "0.7.0"}]}]},
  {eqc, [{erl_opts, [nowarn_export_all, {d, 'TEST'}]}, {deps, [meck]}, {plugins, [rebar_eqc]}]},
  {prod, [{relx, [{dev_mode, false}]}]},
  {lint,
   [{plugins,
     [{rebar3_lint,
       {git, "https://github.com/project-fifo/rebar3_lint.git",
        {tag, "0.1.4"}}}]}]}
 ]}.
{overrides,
 [
  %% R19
  {override, pooler,
   [{erl_opts,
     [{platform_define, "^[0-9]+", namespaced_types},
      debug_info,
      inline]}]},
  %% Normal
  {override, setup, [{post_hooks, []}]}
  ]}.
